<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping//EN"
 	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping  package="org.mseco.learning.hibernate2.associations.manyToManyByComponent">
	<class name="Category">
		<id name="id">
			<generator class="native"></generator>
		</id>
		
		<set name="categorizedItems">
			<key column="Category_id" />
			<composite-element class="CategorizedItem">
				<parent name="category" />
				<many-to-one name="item" column="Item_id"  not-null="true"></many-to-one>
				<property name="description" />
				<property name="date" />
			</composite-element>
		</set>
	</class>
</hibernate-mapping>
